<div class="width: 100%;height:100%">
	<div class="inline margin5left" style="align-items: center;">
		<h2> Board: <%= @board.name %></h2> 
		<div style="margin-left: 30px;">
			<div class="inline alignright">
				<%= link_to "Editar", get_board_path(@board.id), :class => "btn", remote: true, "data-toggle" => "modal", 'data-target' => '#exampleModal2', 'data-id' => @board.id,
								:class => 'btn btn-info btn-sm margin5right' %>
		      	<div class="modal" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"></div>
		      	
				<%= button_to("Excluir", delete_board_path(@board), :method => :delete, :class => 'btn btn-info btn-sm') %>
			</div>
		</div>
	</div>
	<%= render 'column/form', board: @board %>
	<%= render 'column/show', columns: @columns %>
</div>